{
  "name": "@ausuliv/patternfly-extension-seed-root",
  "private": true,
  "version": "0.0.0",
  "description": "This library provides patternfly extensions",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspace @ausuliv/patternfly-extension-seed build",
    "start": "yarn build && concurrently --kill-others \"yarn workspace @ausuliv/patternfly-extension-seed docs:develop\"",
    "build:docs": "yarn workspace @ausuliv/patternfly-extension-seed docs:build",
    "clean": "yarn workspace @ausuliv/patternfly-extension-seed clean",
    "lint:js": "node --max-old-space-size=4096 node_modules/.bin/eslint packages --ext js,jsx,ts,tsx --cache",
    "lint:md": "yarn eslint packages --ext md --no-eslintrc --config .eslintrc-md.json --cache",
    "lint": "yarn lint:js && yarn lint:md"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "eslint": "^8.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-markdown": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.4",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-config-prettier": "8.5.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "prettier": "2.7.1"
  }
}
